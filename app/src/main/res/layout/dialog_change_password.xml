<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/old_password"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/old_password_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/old_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        android:gravity="center_horizontal"
        android:layout_below="@+id/old_password_entry"/>

    <EditText
        android:id="@+id/new_password_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/new_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_password_confirm"
        android:gravity="center_horizontal"
        android:layout_below="@+id/new_password_entry"/>

    <EditText
        android:id="@+id/new_password_confirm_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password_confirm"
        android:inputType="textPassword" />
</RelativeLayout>